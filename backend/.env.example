# Ceramic / DID configuration
# 64 hex chars (32 bytes) Ed25519 seed for server DID (DO NOT commit real value)
CERAMIC_SEED=
CERAMIC_API_URL=https://ceramic-clay.3boxlabs.com
PORT=3001
NODE_ENV=development

# Database Configuration
# The app automatically selects the database:
# - If Firebase credentials are configured below, it uses Firestore
# - If Firebase credentials are NOT configured, it falls back to local MongoDB
# MongoDB fallback configuration:
MONGO_URL=mongodb://localhost:27017
MONGO_DB=medplatform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Ceramic Configuration
CERAMIC_API_URL=https://ceramic-clay.3boxlabs.com
CERAMIC_SEED=your-ceramic-seed-32-characters-long

# WebRTC Configuration (for video calls)
# Optional TURN server for better connectivity (production recommended)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_password

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key
HUGGINGFACE_MODEL_URL=https://api-inference.huggingface.co/models
HUGGINGFACE_TIMEOUT_MS=30000

# AI Models Configuration
# Prompt Refiner Model
HUGGINGFACE_REFINER_MODEL=blaze999/Medical-NER
# Main Medical AI Model (Preferred)
HUGGINGFACE_MEDICAL_MODEL=sethuiyer/Medichat-Llama3-8B
# Alternative Medical Models (fallback options)
HUGGINGFACE_MEDICAL_MODEL_ALT1=ruslanmv/Medical-Llama3-8B
HUGGINGFACE_MEDICAL_MODEL_ALT2=alpha-ai/LLAMA3-3B-Medical-COT

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your_ipfs_api_key
IPFS_API_SECRET=your_ipfs_api_secret
IPFS_GATEWAY_URL=https://ipfs.infura.io/ipfs/

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id
