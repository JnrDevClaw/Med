{
  "name": "medplatform-backend",
  "version": "1.0.0",
  "description": "Medical Platform Backend API with Fastify",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec node src/index.js",
    "start": "nodemon src/index.js",
    "test": "jest",
    "lint": "eslint src --ext .js",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:reset": "knex migrate:rollback --all && knex migrate:latest",
    "seed": "knex seed:run"
  },
  "keywords": [
    "medical",
    "healthcare",
    "fastify",
    "ceramic",
    "did",
    "decentralized"
  ],
  "author": "Medical Platform Team",
  "license": "MIT",
  "dependencies": {
    "@ceramicnetwork/http-client": "^3.2.0",
    "@ceramicnetwork/stream-tile": "^3.2.0",
    "@composedb/client": "^0.6.1",
    "@composedb/devtools": "^0.6.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@helia/unixfs": "^5.1.0",
    "@ipld/dag-cbor": "^9.2.5",
