{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"types": ["node", "fastify", "@fastify/jwt"],
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
